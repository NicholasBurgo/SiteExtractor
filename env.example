# Universal Site Extractor v2 - Environment Configuration

# User agent for web requests
BASE_USER_AGENT="UniversalExtractor/2.0 (+contact@example.com)"

# Contact email (used in API metadata and user-agent)
CONTACT_EMAIL=contact@example.com

# Concurrency settings
GLOBAL_CONCURRENCY=12
PER_HOST_LIMIT=6

# Timeouts (in seconds)
REQUEST_TIMEOUT_SEC=20
RENDER_TIMEOUT_SEC=30

# Default limits
MAX_PAGES_DEFAULT=400
MAX_DEPTH_DEFAULT=5

# Rendering settings
RENDER_ENABLED=false
RENDER_BUDGET=0.10
MIN_TEXT_DENSITY=200

# Storage settings
RUNS_DIR=runs
MAX_FILE_SIZE_MB=50

# Retry settings
MAX_RETRIES=3
RETRY_DELAY_BASE=1.0
RETRY_DELAY_MAX=60.0

# Rate limiting
REQUESTS_PER_SECOND=2.0
BURST_SIZE=5

# Content processing
MAX_TEXT_LENGTH=1000000
MAX_IMAGE_SIZE_MB=10

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,*

# Service URLs
FLARESOLVERR_URL=http://localhost:8191/v1
VITE_API_URL=http://localhost:5051

# Ports
API_PORT=5051

# Token counting model (tiktoken)
TIKTOKEN_MODEL=gpt-3.5-turbo

# Proxy credentials (add as many as needed: PROXY_1, PROXY_2, ... PROXY_10)
# PROXY_1_HOST=proxy1.example.com
# PROXY_1_PORT=8080
# PROXY_1_USERNAME=
# PROXY_1_PASSWORD=
# PROXY_1_COUNTRY=US

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Development settings (uncomment for development)
# DEBUG=true
# RELOAD=true
